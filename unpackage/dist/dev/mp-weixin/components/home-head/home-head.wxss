.homeHead {
  background: radial-gradient(50% 200px at left top, #D5F8FC, transparent), radial-gradient(50% 200px at right top, #D3CBFC, transparent);
}
.homeHead .titleBar {
  display: flex;
  align-items: center;
  padding-left: 50rpx;
}
.homeHead .content {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 13vh;
}
.homeHead .content .time {
  display: flex;
  align-items: center;
  padding-left: 50rpx;
}
.homeHead .content .time .left {
  font-size: 110rpx;
  font-weight: bolder;
}
.homeHead .content .time .right {
  padding-left: 15rpx;
}
.homeHead .content .time .right .year {
  font-size: 31rpx;
}
.homeHead .content .time .right .week {
  font-size: 40rpx;
  font-weight: bolder;
}
.homeHead .content .pic {
  height: 100%;
  padding-right: 80rpx;
}
.homeHead .content .pic image {
  width: 100%;
  height: 100%;
}