.homeLayout {
  height: 100vh;
  background: #BDE1FB;
  display: flex;
  flex-direction: column;
}
.homeLayout .head {
  height: 360rpx;
}
.homeLayout .body {
  flex: 1;
  background: white;
  border-radius: 50rpx 50rpx 0 0;
  overflow: hidden;
}
.homeLayout .body .swiperOut {
  height: calc(100% - 8rpx);
}
.homeLayout .body .swiperOut swiper {
  height: 100%;
}
.homeLayout .body .swiperOut swiper-item .content {
  height: calc(100% - 130rpx);
  display: flex;
  justify-content: center;
  flex-direction: column;
  padding: 0 30rpx;
}
.homeLayout .body .swiperOut swiper-item .content .soupGroupTab .tab {
  height: 40rpx;
  background-color: #aaa;
  width: -webkit-fit-content;
  width: fit-content;
  display: flex;
  font-size: 26rpx;
  font-weight: 400;
  padding: 0 20rpx;
  border-radius: 56rpx;
  letter-spacing: normal;
}
.homeLayout .body .swiperOut swiper-item .content .soupGroupTab .tab .icon {
  display: flex;
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  align-items: center;
  justify-content: center;
}
.homeLayout .body .swiperOut swiper-item .content .soupGroupTab .tab .icon image {
  height: 80%;
  width: 80%;
}
.homeLayout .body .swiperOut swiper-item .content .soupGroupTab .tab .text {
  padding-left: 10rpx;
}
.homeLayout .body .swiperOut swiper-item .content .soupGroupTab .tab:nth-child(1) {
  background: #FFF3F7;
}
.homeLayout .body .swiperOut swiper-item .content .soupGroupTab .tab:nth-child(1) .icon {
  background-image: linear-gradient(to right, #f83162, #ff7795);
}
.homeLayout .body .swiperOut swiper-item .content .soupGroupTab .tab:nth-child(2) {
  background: #EDFDE0;
}
.homeLayout .body .swiperOut swiper-item .content .soupGroupTab .tab:nth-child(2) .icon {
  background-image: linear-gradient(to right, #4F9153, #4bbb8b);
}
.homeLayout .body .swiperOut swiper-item .content .main {
  font-size: 50rpx;
  font-weight: lighter;
  width: 100%;
  letter-spacing: 0.05em;
  line-height: 1.8em;
  margin-top: 10rpx;
  margin-bottom: 60rpx;
  display: -webkit-box;
  /*将元素作为块状容器*/
  -webkit-line-clamp: 5;
  /*限制显示的最大行数为3行*/
  -webkit-box-orient: vertical;
  /*设置子元素垂直布局*/
  overflow: hidden;
  /*超出容器范围的内容不显示*/
}
.homeLayout .body .swiperOut swiper-item .content .author .line {
  width: 70rpx;
  height: 5rpx;
  background: #f0f0f0;
}
.homeLayout .body .swiperOut swiper-item .content .author .userInfo {
  display: flex;
  align-items: center;
  font-size: 26rpx;
  coor: #888;
  padding-top: 30rpx;
}
.homeLayout .body .swiperOut swiper-item .content .author .avatar {
  width: 40rpx;
  height: 40rpx;
}
.homeLayout .body .swiperOut swiper-item .content .author .avatar image {
  height: 100%;
  width: 100%;
}
.homeLayout .body .swiperOut swiper-item .content .author .name {
  padding-left: 12rpx;
}
.homeLayout .body .swiperOut swiper-item .content .author .from {
  padding-left: 12rpx;
}
.homeLayout .body .swiperOut swiper-item .info {
  height: 130rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 30rpx;
}
.homeLayout .body .swiperOut swiper-item .info .item {
  display: flex;
  align-items: center;
  padding: 10rpx 15rpx;
  columns: #999;
}
.homeLayout .body .swiperOut swiper-item .info .left {
  display: flex;
}
.homeLayout .body .swiperOut swiper-item .info .left .item {
  padding-left: 0;
}
.homeLayout .body .swiperOut swiper-item .info .right {
  display: flex;
}
.homeLayout .body .swiperOut swiper-item .info .right .item:last-child {
  padding-right: 0;
}
.homeLayout .body .swiperOut swiper .ad {
  background: #F8F8F8;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: center;
  text-align: center;
}
.homeLayout .body .swiperOut swiper .ad .message {
  background: #fff;
  border-radius: 30rpx;
  padding: 40rpx;
  margin-top: 80rpx;
}
.homeLayout .body .swiperOut swiper .ad .message .title {
  font-size: 46rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #eee;
  margin-bottom: 20rpx;
}
.homeLayout .body .swiperOut swiper .ad .message .des {
  font-size: 32rpx;
  color: #555;
  line-height: 1.8em;
}
.homeLayout .body .swiperOut swiper .ad .btnGroup {
  font-size: 30rpx;
}
.homeLayout .body .swiperOut swiper .ad .btnGroup .btn {
  width: 400rpx;
  height: 100rpx;
  border-radius: 100rpx;
  background: linear-gradient(to top, #93c4ff, #b1e1ff);
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 38rpx;
  color: #203e5f;
  margin-bottom: 10rpx;
}
.homeLayout .body .swiperOut swiper .ad .btnGroup .text {
  padding: 20rpx 0;
}
.homeLayout .body .progress {
  height: 8rpx;
  width: 100%;
  background: #ffffff;
}
.homeLayout .body .progress .line {
  height: 100%;
  width: 50%;
  background: linear-gradient(to right, #fdd4f1, #74dbef);
}